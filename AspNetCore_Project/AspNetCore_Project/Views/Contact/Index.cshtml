@using EntityLayer.Concrete
@model List<Message>
@{
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Contact</h4>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                    <tr>
                        <th>#</th>
                        <th>Sender</th>
                        <th>Mail</th>
                        <th>Date</th>
                        <th>Delete</th>
                        <th>See Message</th>
                    </tr>
                    </thead>
                    <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.MessageId</td>
                            <td>@item.Name</td>
                            <td>@item.Email</td>
                            <td>@item.Date</td>
                            <td>
                                <a href="/Contact/DeleteMessage/@item.MessageId" class="btn btn-outline-danger">Delete</a>
                            </td>
                            <td>
                                <a href="/Contact/ContactDetails/@item.MessageId" class="btn btn-outline-success">See Message</a>
                            </td>
                        </tr>
                    }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>