@model EntityLayer.Concrete.Service

@{
    ViewBag.Title = "title";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

@using (Html.BeginForm("UpdateService", "Service", FormMethod.Post))
{
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <form class="forms-sample">
                    @Html.HiddenFor(x => x.ServiceId)
                    <label>Service Title</label>
                    @Html.TextBoxFor(x => x.Title, new { @class = "form-control mt-2" })
                    <label class="mt-3">Image URL</label>
                    @Html.TextBoxFor(x => x.ImageUrl, new { @class = "form-control mt-2" })
                    <button class="btn btn-outline-success mt-3">Update</button>
                </form>
            </div>
        </div>
    </div>
}