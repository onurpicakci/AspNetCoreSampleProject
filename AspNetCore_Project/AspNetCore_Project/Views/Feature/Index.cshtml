@model EntityLayer.Concrete.Feature

@{
    ViewBag.Title = "title";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

@using(Html.BeginForm("Index","Feature",FormMethod.Post))
{
    @Html.HiddenFor(x => x.FeatureId)
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <form class="forms-sample">
                    <div class="form-group">
                        <label>Header</label>
                        @Html.TextBoxFor(x => x.Header, new { @class = "form-control"})
                    </div>
                    <div class="form-group">
                        <label>Name</label>
                        @Html.TextBoxFor(x => x.Name , new { @class = "form-control" })
                    </div> 
                    <div class="form-group">
                        <label>Title</label>
                        @Html.TextBoxFor(x => x.Title , new { @class = "form-control" })
                    </div>
                    <button type="submit" class="btn btn-outline-success mr-2">Save</button>
                    <button class="btn btn-dark">Cancel</button>
                </form>
            </div>
        </div>
    </div>
}
