@model EntityLayer.Concrete.SocialMedia

@{
    ViewBag.Title = "title";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

@using(Html.BeginForm("UpdateSocialMedia","SocialMedia",FormMethod.Post))
{
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <form class="forms-sample">
                    <div class="form-group">
                        <label>ID</label>
                        @Html.TextBoxFor(x => x.SocialMediaId, new { @class = "form-control"})
                    </div>
                    <div class="form-group">
                        <label>Name</label>
                        @Html.TextBoxFor(x => x.Name , new { @class = "form-control" })
                    </div> 
                    <div class="form-group">
                        <label>Icon</label>
                        @Html.TextBoxFor(x => x.Icon , new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label>URL</label>
                        @Html.TextBoxFor(x => x.Url, new { @class = "form-control" })
                    </div>
                    <button type="submit" class="btn btn-primary mr-2">Save</button>
                    <button class="btn btn-dark">Cancel</button>
                </form>
            </div>
        </div>
    </div>
}
