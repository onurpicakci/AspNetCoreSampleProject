@model EntityLayer.Concrete.Testimonials

@{
    ViewBag.Title = "title";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

@using (Html.BeginForm("UpdateTestimonial", "Testimonial", FormMethod.Post))
{
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Update Testimonial</h4>
                <form class="forms-sample">
                    @Html.HiddenFor(x => x.TestimonialsId)
                    <br/><br/><br/>
                    <label>Client Name</label>
                    @Html.TextBoxFor(x => x.ClientName, new { @class = "form-control mt-2" })
                    <label class="mt-3">Company</label>
                    @Html.TextBoxFor(x => x.Company, new { @class = "form-control mt-2" })
                    <label class="mt-3">Image Url</label>
                    @Html.TextBoxFor(x => x.ImageUrl, new { @class = "form-control mt-2" })
                    <label class="mt-3">Comment Url</label>
                    @Html.TextAreaFor(x => x.Comment, 8, 3,  new { @class = "form-control mt-2" })
                    @Html.HiddenFor(x => x.TestimonialsId)
                    <button class="btn btn-success mt-3">Update</button>
                </form>
            </div>
        </div>
    </div>
}