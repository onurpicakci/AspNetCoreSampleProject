@model EntityLayer.Concrete.Skill

@{
    ViewBag.Title = "title";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

@using (Html.BeginForm("UpdateSkill", "Skill", FormMethod.Post))
{
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Update Skill</h4>
                <form class="forms-sample">
                    @Html.HiddenFor(x => x.SkillId)
                    <br/><br/><br/>
                    <label>Skill Title</label>
                    @Html.TextBoxFor(x => x.Title, new { @class = "form-control mt-2" })
                    <label class="mt-3">Ratio</label>
                    @Html.TextBoxFor(x => x.Value, new { @class = "form-control mt-2" })
                    @Html.HiddenFor(x => x.SkillId)
                    <button class="btn btn-success mt-3">Update</button>
                </form>
            </div>
        </div>
    </div>
}