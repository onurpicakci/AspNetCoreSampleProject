@using EntityLayer.Concrete
@model List<WriterMessage>

@{
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
  string color = "";
  string status = "";
}

<div class="col-lg-12 grid-margin stretch-card">
      <div class="card">
        <div class="card-body">
          <h4 class="card-title">Inbox</h4>
          <div class="table-responsive">
            <table class="table">
              <thead>
              <tr>
                <th>#</th>
                <th>Subject</th>
                <th>Sender</th>
                <th>Date</th>
                <th>Details</th>
              </tr>
              </thead>
              <tbody>
              @foreach (var item in Model)
              {
              <tr>
                <td>@item.Id</td>
                <td>@item.Subject</td>
                <td>@item.SenderName</td>
                <td>@(((DateTime)item.MessageDate).ToString("dd-MMM-yyyy"))</td>
                <td><a href="/Writer/Message/MessageDetails/@item.Id" class="btn btn-outline-primary">Details</a></td>
              </tr>
              }
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>